{
  "name": "example",
  "description": "Example plugin demonstrating BestBox plugin system capabilities",
  "version": "1.0.0",
  "author": "BestBox Team",
  "requires": {
    "bins": [],
    "python_packages": [],
    "env_vars": []
  },
  "tools": [
    {
      "name": "example_tool",
      "description": "An example tool that echoes back the input with a prefix",
      "parameters": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message to echo"
          }
        },
        "required": ["message"]
      }
    }
  ],
  "hooks": [
    {
      "event": "BEFORE_ROUTING",
      "handler": "plugins_contrib.example.hooks.log_before_routing",
      "priority": 100
    }
  ]
}
