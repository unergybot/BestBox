# GPU Scheduler Service
# Manages mutual exclusion between LLM and OCR-VL on RTX 3080
# Uses file-based locks with Redis fallback

FROM python:3.12-slim

WORKDIR /app

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    SCHEDULER_PORT=8086 \
    LOCK_TIMEOUT=300

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    fastapi>=0.109.0 \
    uvicorn[standard]>=0.27.0 \
    redis>=5.0.0 \
    pydantic \
    pydantic_settings \
    httpx

# Copy scheduler code
COPY services/gpu_scheduler /app/services/gpu_scheduler
RUN touch /app/services/__init__.py

# Create lock directory
RUN mkdir -p /tmp/gpu-locks

# Expose port
EXPOSE 8086

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=10s \
    CMD curl -f http://localhost:8086/health || exit 1

# Start command
CMD ["python", "-m", "uvicorn", "services.gpu_scheduler.main:app", "--host", "0.0.0.0", "--port", "8086"]
