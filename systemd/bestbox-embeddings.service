[Unit]
Description=BestBox Embeddings Service
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=%h/BestBox/services/embeddings
EnvironmentFile=%h/BestBox/.env
ExecStart=%h/BestBox/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8081
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
